!
router bgp 65101
 router-id 192.168.0.1
 log-neighbor-changes
 bestpath compare-routerid
 timers 60 180
 !
 address-family ipv4 unicast
  redistribute connected
  maximum-paths 1
  maximum-paths ibgp 1
  dampening
 !
 neighbor 1.1.1.1
  remote-as 65000
  !
  address-family ipv4 unicast
   activate
   end
!

